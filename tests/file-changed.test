{% for peewee_version in peewee_versions %}
{% for python_version in python_versions %}
{% for humanize_version in humanize_versions %}
- name: File changed
  preconditions:
    python_version: {{ python_version }}
    peewee_version: {{ peewee_version }}
    humanize_version: {{ humanize_version }}
  tags:
    - file-changed
    - py{{ python_version }}
  scenario:
    - Touch: tomonitor.txt

    - Run command: |
        import hitchtrigger

        trigmon = hitchtrigger.Monitor("monitor.sqlite")
        conditions = trigmon.modified(["tomonitor.txt"])

        with trigmon.watch("filewatch", conditions) as trigger:
            if trigger:
                output(trigger.why)

    - Output is: |
        New file(s) / director(ies) detected:
          - tomonitor.txt

    - Run command: |
        with trigmon.watch("filewatch", conditions) as trigger:
            if trigger:
                should_not_run()

    - Touch: tomonitor.txt

    - Run command: |
        with trigmon.watch("filewatch", conditions) as trigger:
            if trigger:
                output(trigger.why)

    - Output is: |
        File(s) / director(ies) changed:
          - tomonitor.txt
{% endfor %}
{% endfor %}
{% endfor %}
