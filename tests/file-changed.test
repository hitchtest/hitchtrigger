{% for peewee_version in peewee_versions %}
{% for python_version in python_versions %}
- name: File changed
  preconditions:
    python_version: {{ python_version }}
    peewee_version: {{ peewee_version }}
  tags:
    - file-changed
    - py{{ python_version }}
  scenario:
    - Touch: tomonitor.txt

    - Run command: |
        import hitchtrigger

        trigmon = hitchtrigger.Monitor("monitor.sqlite")
        conditions = trigmon.modified(["tomonitor.txt"])

        with trigmon.watch("filewatch", conditions) as trigger:
            if trigger:
                should_run("firstrun")

    - Should have run: firstrun

    - Run command: |
        with trigmon.watch("filewatch", conditions) as trigger:
            if trigger:
                should_not_run()

    - Touch: tomonitor.txt

    - Run command: |
        with trigmon.watch("filewatch", conditions) as trigger:
            if trigger:
                should_run("secondrun")

    - Should have run: secondrun
{% endfor %}
{% endfor %}
