{% for peewee_version in peewee_versions %}
{% for python_version in python_versions %}
- name: Flag changed
  preconditions:
    python_version: {{ python_version }}
    peewee_version: {{ peewee_version }}
  tags:
    - flag-changed
    - py{{ python_version }}
  scenario:
    - Touch: tomonitor.txt

    - Run command: |
        import hitchtrigger

        trigmon = hitchtrigger.Monitor("monitor.sqlite")

        with trigmon.watch("flagwatch", flags={"v": "1", "ver": "2.7.10"}) as trigger:
            if bool(trigger):
                should_run("firstrun")

    - Should have run: firstrun

    - Run command: |
        with trigmon.watch("flagwatch", flags={"v": "1", "ver": "2.7.10"}) as trigger:
            if trigger:
                should_not_run()

    - Run command: |
        with trigmon.watch("flagwatch", flags={"v": "2", "ver": "2.7.10"}) as trigger:
            if trigger:
                should_run("secondrun")

    - Should have run: secondrun
{% endfor %}
{% endfor %}
